<%- include("partials/header") %>

<div class="container mt-3">
    <h1 style="text-align:center;">Edit Comment</h1>
    <div class="container" style="width:30%; margin:25px auto;">
        <form action="/courses/<%= course_id %>/comment/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <button class="btn btn-md btn-success btn-block">Submit</button>
            </div>
        </form>
         <a href="/courses">Go back</a>
    </div>
</div>

<br>
