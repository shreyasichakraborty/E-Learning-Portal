<%- include("partials/header") %>

<div class="container mt-3">
    <h1 style="text-align:center;">Add a new course</h1>
    <div class="container" style="width:30%; margin:25px auto;">
        <form action="/courses" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="Name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="Image URL">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="category" placeholder="Course Category">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="price" placeholder="Course Price">
            </div>
            <div class="form-group">
                <textarea class="form-control" type="text" name="describe" placeholder="Course Description"></textarea>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="creator" placeholder="Course Content Creator">
            </div>
			<div class="form-group">
                <input class="form-control" type="text" name="expertise" placeholder="Creator's Expertise">
            </div>
			<div class="form-group">
                <input class="form-control" type="text" name="qualification" placeholder="Creator's Qualification">
            </div>
            <div class="form-group">
                <button class="btn btn-md btn-success btn-block">Submit</button>
            </div>
        </form>
         <a href="/courses">Go back</a>
    </div>
</div>

<br>
<%- include("partials/foot") %>