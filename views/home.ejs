<div class="jumbotron">
	  <h1 class="display-4">Welcome to Grade-Up!!!</h1>
		  <p class="lead">View some of the best courses offered by us.</p>
			<% if(currentUser && currentUser.isAdmin) { %>
			  <hr class="my-4">
				<a class="btn btn-primary btn-lg" href="/new" role="button">Add Course</a>
				<% } %>
</div>


<div class="container mt-2">
	<div class="row text-center">
         <div class="col-md-12">
             <% if(noMatch !== null) { %>
             <h3><%= noMatch %></h3>
             <div class="container mb-5" style="align-item:center;margin-left:400px;">
            	<form action="/courses" method="GET" class="form-inline">
            		<div class="form-group">
            			<input type="text" name="search" placeholder="Course search..." class="form-control">
            			<input type="submit" value="Search" class="ui small pink button" style="margin-left:10px;">
            		</div>
            	</form>
            </div>
             <% } %>
         </div>
	</div>
</div>



	
<div class = "container" id="ai">
<h2>Artificial Intelligence</h2>
	<div class="row text-center">
  		 <% for(var i=0;i<courses.length;i++) { %>
			<% if(courses[i].category === "AI"){%>
        <div class="col-md-4 col-sm-6 mb-5">
			
			<div class="card" style="width: 20rem;">
				<img class="card-img-top" src="<%= courses[i].image %>" alt="Card image cap">
				<div class="card-body">
					<h4 class="card-title"><%= courses[i].name %></h4>
					<p class="card-text"></p>
					<a class="btn btn-warning float-left" href="/courses/<%= courses[i]._id %>">More info</a>
					<a class="btn btn-success float-right" href="/courses/<%= courses[i]._id %>/checkout">Rs.
						  <%= courses[i].price %>
					</a>
				
  				</div>
			</div> 
        </div>
    <% }%>
		<% }%>
	</div>	
</div>



